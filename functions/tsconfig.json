{
  "compilerOptions": {
    "lib": ["ESNext", "dom","dom.Iterable"],
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
